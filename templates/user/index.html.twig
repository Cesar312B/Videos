{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Userios</h1>
    <table id="example" class="table table-striped table-bordered display nowrap border-3 rounded-3 border-light shadow-lg" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Activo</th>
                <th>Verificado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.Nombre }}</td>
                <td>{{ user.Apellido }}</td>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" title="Mirar"><i class="bi bi-binoculars-fill"></i></a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" title="Editar"><i class="bi bi-pen-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    var table = $('#example').DataTable( {
        responsive: true,
        language: {
            url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/es-mx.json'
        }
    } );
 
    new $.fn.dataTable.FixedHeader( table );
} );    
</script>    
{% endblock %}