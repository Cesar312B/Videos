{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div style="float:right">
    {{ include('user/_delete_form.html.twig') }}
</div>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.Nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.Apellido }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

  <div class="btn-group" role="group" aria-label="Basic mixed styles example">
  <a href="{{ path('user_index') }}" class="btn btn-danger"> Regresar a la Lista </a>
  <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning"> Editar </a>
</div>
{% endblock %}
