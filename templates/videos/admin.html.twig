{% extends 'base.html.twig' %}

{% block title %}Videos index{% endblock %}

{% block body %}
  <a href="{{ path('videos_new') }}" title="Crear"><i class="bi bi-plus-circle"></i></a>
<table id="example" class="table table-striped table-bordered display nowrap border-3 rounded-3 border-light shadow-lg" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Archivo</th>
            <th>Caratula</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for video in videos %}
        <tr>
             <td>{{video.id}}</td>
            <td>{{video.Nombre}}</td>
            <td>{{video.Descripcion|raw}}</td>
            <td>{{video.file}}</td>
            <td><img src="{{ asset('caratula/'~video.Caratula) }}" alt="" width="50" class="mr-3 rounded-circle img-thumbnail shadow-sm"></td>
            <td>
              <a href="{{ path('videos_edit', {'id': video.id}) }}" title="Editar"><i class="bi bi-pencil"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    var table = $('#example').DataTable( {
        responsive: true,
        language: {
            url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/es-mx.json'
        }
    } );
 
    new $.fn.dataTable.FixedHeader( table );
} );    
</script>    
{% endblock %}